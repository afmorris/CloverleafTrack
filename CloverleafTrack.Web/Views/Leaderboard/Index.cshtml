        <!-- Boys and Girls side-by-side on desktop, stacked on mobile -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

            <!-- Boys Outdoor -->
            <div>
                <h3 class="text-2xl font-bold mb-4 text-blue-600 dark:text-blue-400">Boys</h3>
                @foreach (var category in Model.BoysOutdoorCategories)
                {
                    <div class="mb-6 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
                        <div class="bg-blue-50 dark:bg-blue-900/20 border-b border-blue-200 dark:border-blue-800 px-4 py-3">
                            <h4 class="font-semibold text-lg text-blue-900 dark:text-blue-300">@category.CategoryName</h4>
                        </div>
                        <div class="divide-y divide-gray-200 dark:divide-gray-700">
                            @foreach (var evt in category.Events)
                            {
                                <div class="px-4 py-3 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                                    <div class="flex items-start justify-between gap-4">
                                        <div class="flex-1 min-w-0">
                                            <div class="font-semibold text-gray-900 dark:text-white">
                                                @evt.EventName
                                            </div>
                                            @if (!string.IsNullOrEmpty(evt.AthleteFirstName))
                                            {
                                                <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                                                    <a asp-controller="Roster" asp-action="Details" asp-route-slug="@evt.AthleteSlug" class="hover:underline">
                                                        @evt.AthleteFullName
                                                    </a>
                                                </div>
                                            }
                                            else if (!string.IsNullOrEmpty(evt.RelayName))
                                            {
                                                <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                                                    <ul class="list-disc list-inside text-sm">
                                                        @foreach (var athlete in GetRelayAthletes(evt.RelayName))
                                                        {
                                                            var split = athlete.Split(' ');
                                                            var firstName = split[0];
                                                            var lastName = split[1];
                                                            var helper = new SlugHelper();
                                                            var slug = helper.GenerateSlug($"{firstName}-{lastName}");

                                                            <li>
                                                                <a asp-controller="Roster" asp-action="Details" asp-route-slug="@slug" class="underline">
                                                                    @athlete
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="text-sm text-gray-500 dark:text-gray-500 mt-1 italic">
                                                    No performances yet
                                                </div>
                                            }
                                        </div>
                                        <div class="text-right flex-shrink-0">
                                            @if (!string.IsNullOrEmpty(evt.Performance))
                                            {
                                                <div class="font-mono font-bold text-lg text-blue-600 dark:text-blue-400">
                                                    @evt.Performance
                                                </div>
