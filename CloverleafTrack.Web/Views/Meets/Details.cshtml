@model MeetDetailsViewModel

@{
    ViewBag.Title = Model.Name;
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Meet Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold mb-2">@Model.Name</h1>
        <div class="flex flex-wrap gap-4 text-gray-600 dark:text-gray-400">
            <div class="flex items-center gap-2">
                <span class="text-lg">üìÖ</span>
                <span>@Model.Date.ToString("MMMM d, yyyy")</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="text-lg">üìç</span>
                <span>@Model.LocationName@(string.IsNullOrEmpty(Model.LocationCity) ? "" : $", {Model.LocationCity}")@(string.IsNullOrEmpty(Model.LocationState) ? "" : $", {Model.LocationState}")</span>
            </div>
            <div class="flex items-center gap-2">
                @if (Model.Environment == CloverleafTrack.Models.Enums.Environment.Indoor)
                {
                    <span class="text-lg">üèüÔ∏è</span>
                    <span>Indoor</span>
                }
                else
                {
                    <span class="text-lg">üå§Ô∏è</span>
                    <span>Outdoor</span>
                }
            </div>
            @if (Model.HandTimed)
            {
                <div class="flex items-center gap-2">
                    <span class="text-lg">‚è±Ô∏è</span>
                    <span>Hand-Timed</span>
                </div>
            }
        </div>
        <div class="mt-2 text-sm text-gray-500 dark:text-gray-400">
            @Model.SeasonName Season
        </div>
    </div>

    <!-- Summary Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        <div class="bg-white dark:bg-gray-800 rounded shadow p-4 text-center border border-gray-200 dark:border-gray-700">
            <div class="text-2xl font-bold text-gray-900 dark:text-white">@Model.TotalPerformances</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Total Performances</div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded shadow p-4 text-center border border-gray-200 dark:border-gray-700">
            <div class="text-2xl font-bold text-gray-900 dark:text-white">@Model.UniqueAthletes</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Athletes</div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded shadow p-4 text-center border border-gray-200 dark:border-gray-700">
            <div class="text-2xl font-bold text-green-600 dark:text-green-400">@Model.TotalPRs</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Personal Records</div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded shadow p-4 text-center border border-gray-200 dark:border-gray-700">
            <div class="text-2xl font-bold text-yellow-600 dark:text-yellow-400">@Model.TotalSchoolRecords</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">School Records</div>
        </div>
    </div>

    <!-- Results by Gender -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        
        <!-- Boys Results -->
        <div>
            <h2 class="text-2xl font-bold mb-4 text-blue-600 dark:text-blue-400">‚ôÇ Boys</h2>
            
            @if (Model.BoysEvents.Any())
            {
                @foreach (var eventGroup in Model.BoysEvents)
                {
                    <div class="mb-6">
                        <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white bg-gray-100 dark:bg-gray-800 px-3 py-2 rounded">
                            @eventGroup.EventName
                        </h3>
                        
                        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded overflow-hidden">
                            <table class="min-w-full text-sm">
                                <thead class="bg-gray-50 dark:bg-gray-700">
                                    <tr>
                                        <th class="px-3 py-2 text-left font-semibold">Athlete</th>
                                        <th class="px-3 py-2 text-left font-semibold">Mark</th>
                                        <th class="px-3 py-2 text-center font-semibold">Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var perf in eventGroup.Performances)
                                    {
                                        <tr class="border-t border-gray-200 dark:border-gray-700">
                                            <td class="px-3 py-2">@perf.AthleteName</td>
                                            <td class="px-3 py-2 font-mono font-semibold">@perf.Performance</td>
                                            <td class="px-3 py-2 text-center">
                                                <div class="flex justify-center gap-1 flex-wrap">
                                                    @if (perf.IsSchoolRecord)
                                                    {
                                                        <span class="inline-block px-2 py-0.5 text-xs font-semibold rounded bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200" title="School Record">
                                                            SR
                                                        </span>
                                                    }
                                                    @if (perf.IsPersonalBest)
                                                    {
                                                        <span class="inline-block px-2 py-0.5 text-xs font-semibold rounded bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200" title="Personal Best">
                                                            PR
                                                        </span>
                                                    }
                                                    @if (perf.IsSeasonBest)
                                                    {
                                                        <span class="inline-block px-2 py-0.5 text-xs font-semibold rounded bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200" title="Season Best">
                                                            SB
                                                        </span>
                                                    }
                                                    @if (perf.AllTimeRank.HasValue && perf.AllTimeRank <= 10)
                                                    {
                                                        <span class="inline-block px-2 py-0.5 text-xs font-semibold rounded bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200" title="All-Time Top 10">
                                                            #@perf.AllTimeRank AT
                                                        </span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-gray-500 dark:text-gray-400 italic">No boys' results for this meet.</p>
            }
        </div>

        <!-- Girls Results -->
        <div>
            <h2 class="text-2xl font-bold mb-4 text-pink-600 dark:text-pink-400">‚ôÄ Girls</h2>
            
            @if (Model.GirlsEvents.Any())
            {
                @foreach (var eventGroup in Model.GirlsEvents)
                {
                    <div class="mb-6">
                        <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white bg-gray-100 dark:bg-gray-800 px-3 py-2 rounded">
                            @eventGroup.EventName
                        </h3>
                        
                        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded overflow-hidden">
                            <table class="min-w-full text-sm">
                                <thead class="bg-gray-50 dark:bg-gray-700">
                                    <tr>
                                        <th class="px-3 py-2 text-left font-semibold">Athlete</th>
                                        <th class="px-3 py-2 text-left font-semibold">Mark</th>
                                        <th class="px-3 py-2 text-center font-semibold">Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var perf in eventGroup.Performances)
                                    {
                                        <tr class="border-t border-gray-200 dark:border-gray-700">
                                            <td class="px-3 py-2">@perf.AthleteName</td>
                                            <td class="px-3 py-2 font-mono font-semibold">@perf.Performance</td>
                                            <td class="px-3 py-2 text-center">
                                                <div class="flex justify-center gap-1 flex-wrap">
                                                    @if (perf.IsSchoolRecord)
                                                    {
                                                        <span class="inline-block px-2 py-0.5 text-xs font-semibold rounded bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200" title="School Record">
                                                            SR
                                                        </span>
                                                    }
                                                    @if (perf.IsPersonalBest)
                                                    {
                                                        <span class="inline-block px-2 py-0.5 text-xs font-semibold rounded bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200" title="Personal Best">
                                                            PR
                                                        </span>
                                                    }
                                                    @if (perf.IsSeasonBest)
                                                    {
                                                        <span class="inline-block px-2 py-0.5 text-xs font-semibold rounded bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200" title="Season Best">
                                                            SB
                                                        </span>
                                                    }
                                                    @if (perf.AllTimeRank.HasValue && perf.AllTimeRank <= 10)
                                                    {
                                                        <span class="inline-block px-2 py-0.5 text-xs font-semibold rounded bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200" title="All-Time Top 10">
                                                            #@perf.AllTimeRank AT
                                                        </span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-gray-500 dark:text-gray-400 italic">No girls' results for this meet.</p>
            }
        </div>
    </div>

</div>