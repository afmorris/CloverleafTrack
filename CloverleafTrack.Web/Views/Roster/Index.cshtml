@model RosterViewModel

@{
    ViewData["Title"] = "Roster";
}

@section Scripts {
    <script defer src="https://cdn.jsdelivr.net/npm/@@alpinejs/collapse@3.x.x/dist/cdn.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
}

<h1 class="text-3xl font-heading font-bold mb-8">Current Roster</h1>

@foreach (var category in Model.ActiveAthletes)
{
    @await Html.PartialAsync("_EventCategoryRosterSection", category)
}

@await Html.PartialAsync("_TableRosterSection", Model.FormerAthletes)