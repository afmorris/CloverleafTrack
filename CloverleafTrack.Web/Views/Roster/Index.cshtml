@model RosterViewModel

@{
    ViewData["Title"] = "Roster";
}

@functions {
    string GetCategoryName(CloverleafTrack.Models.Enums.EventCategory category)
    {
        return category switch
        {
            CloverleafTrack.Models.Enums.EventCategory.Sprints => "Sprints",
            CloverleafTrack.Models.Enums.EventCategory.Distance => "Distance",
            CloverleafTrack.Models.Enums.EventCategory.Hurdles => "Hurdles",
            CloverleafTrack.Models.Enums.EventCategory.Jumps => "Jumps",
            CloverleafTrack.Models.Enums.EventCategory.Throws => "Throws",
            CloverleafTrack.Models.Enums.EventCategory.Relays => "Relays",
            _ => "Other"
        };
    }
    
    string GetCategoryIcon(CloverleafTrack.Models.Enums.EventCategory category)
    {
        return category switch
        {
            CloverleafTrack.Models.Enums.EventCategory.Sprints => "⚡",
            CloverleafTrack.Models.Enums.EventCategory.Distance => "🏃",
            CloverleafTrack.Models.Enums.EventCategory.Hurdles => "🚧",
            CloverleafTrack.Models.Enums.EventCategory.Jumps => "🦘",
            CloverleafTrack.Models.Enums.EventCategory.Throws => "🥏",
            CloverleafTrack.Models.Enums.EventCategory.Relays => "🤝",
            _ => "📊"
        };
    }
}

<style>
    .athlete-card {
        transition: all 0.2s ease-in-out;
    }
    .athlete-card:hover {
        transform: translateY(-2px);
    }
</style>

<!-- Main Content -->
<div class="max-w-7xl mx-auto px-6">

    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-5xl font-bold mb-3 text-gray-900 dark:text-white">Roster</h1>
        <p class="text-gray-600 dark:text-gray-400 text-lg">Current and former Cloverleaf athletes</p>
    </div>

    <!-- Current Roster Section -->
    <div class="mb-16">
        <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">Current Roster</h2>
        
        @if (Model.ActiveAthletes.Any())
        {
            @foreach (var category in Model.ActiveAthletes.OrderBy(c => (int)c.Key))
            {
                <div class="mb-12">
                    <div class="flex items-center gap-3 mb-6">
                        <span class="text-3xl">@GetCategoryIcon(category.Key)</span>
                        <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@GetCategoryName(category.Key)</h3>
                        <span class="text-gray-600 dark:text-gray-400 text-sm">(@category.Value.Count athletes)</span>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        @foreach (var athlete in category.Value)
                        {
                            <a href="@Url.Action("Details", "Roster", new { slug = athlete.AthleteSlug })" 
                               class="athlete-card bg-gray-300/50 border border-gray-500 dark:bg-gray-700/50 rounded-xl p-5 block hover:shadow-xl">
                                <div class="flex items-start justify-between mb-3">
                                    <div>
                                        <h4 class="text-lg font-bold text-gray-900 dark:text-white mb-1">
                                            @athlete.FullName
                                        </h4>
                                        <div class="text-sm text-gray-800 dark:text-white">@athlete.Class</div>
                                    </div>
                                    <div class="text-2xl">
                                        @if (athlete.Gender == CloverleafTrack.Models.Enums.Gender.Male)
                                        {
                                            <span class="text-blue-400">♂</span>
                                        }
                                        else
                                        {
                                            <span class="text-pink-400">♀</span>
                                        }
                                    </div>
                                </div>
                                
                                <div class="space-y-2">
                                    @foreach (var evt in athlete.EventsInCategory.Take(3))
                                    {
                                        <div class="flex items-center justify-between text-sm">
                                            <span class="text-gray-700 dark:text-gray-300 flex items-center gap-2">
                                                @if (evt.Environment == CloverleafTrack.Models.Enums.Environment.Indoor)
                                                {
                                                    <span class="text-blue-400 text-xs">🏢</span>
                                                }
                                                else
                                                {
                                                    <span class="text-amber-400 text-xs">☀️</span>
                                                }
                                                @evt.Name
                                            </span>
                                            <span class="font-mono font-semibold text-gray-900 dark:text-white">@evt.PersonalRecord</span>
                                        </div>
                                    }
                                    
                                    @if (athlete.EventsInCategory.Count > 3)
                                    {
                                        <div class="text-xs text-gray-500 mt-2">
                                            + @(athlete.EventsInCategory.Count - 3) more events
                                        </div>
                                    }
                                </div>
                            </a>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="p-8 bg-gray-800/50 border border-gray-700 rounded-xl text-center">
                <p class="text-gray-400">No active athletes found.</p>
            </div>
        }
    </div>

    <!-- Former Athletes Section -->
    <div class="mb-12">
        <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">Former Athletes</h2>
        
        @if (Model.FormerAthletes.Any())
        {
            @foreach (var yearGroup in Model.FormerAthletes.OrderByDescending(g => g.Key))
            {
                <details class="mb-4 bg-gray-400/50 dark:bg-gray-800/30 border border-gray-700 rounded-xl overflow-hidden">
                    <summary class="p-6 cursor-pointer hover:bg-gray-500/30 dark:hover:bg-gray-800/50 transition-colors flex items-center justify-between">
                        <div>
                            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">Class of @yearGroup.Key</h3>
                            <p class="text-sm text-gray-600 dark:text-gray-400">@yearGroup.Value.Count athletes</p>
                        </div>
                        <svg class="w-6 h-6 text-gray-600 dark:text-gray-400 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </summary>
                    
                    <div class="p-6 pt-2 bg-gray-300/50 dark:bg-gray-800/30">
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                            @foreach (var athlete in yearGroup.Value)
                            {
                                <a href="@Url.Action("Details", "Roster", new { slug = athlete.AthleteSlug })" 
                                   class="athlete-card bg-gray-800/50 border border-gray-700 rounded-xl p-5 block hover:shadow-xl">
                                    <div class="flex items-start justify-between mb-3">
                                        <div>
                                            <h4 class="text-lg font-bold text-white mb-1">
                                                @athlete.FullName
                                            </h4>
                                            <div class="text-sm text-gray-500">@athlete.Class</div>
                                        </div>
                                        <div class="text-2xl">
                                            @if (athlete.Gender == CloverleafTrack.Models.Enums.Gender.Male)
                                            {
                                                <span class="text-blue-400">♂</span>
                                            }
                                            else
                                            {
                                                <span class="text-pink-400">♀</span>
                                            }
                                        </div>
                                    </div>
                                    
                                    <div class="space-y-2">
                                        @foreach (var evt in athlete.EventsInCategory.Take(3))
                                        {
                                            <div class="flex items-center justify-between text-sm">
                                                <span class="text-gray-300 flex items-center gap-2">
                                                    @if (evt.Environment == CloverleafTrack.Models.Enums.Environment.Indoor)
                                                    {
                                                        <span class="text-blue-400 text-xs">🏢</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-amber-400 text-xs">☀️</span>
                                                    }
                                                    @evt.Name
                                                </span>
                                                <span class="font-mono font-semibold text-white">@evt.PersonalRecord</span>
                                            </div>
                                        }
                                        
                                        @if (athlete.EventsInCategory.Count > 3)
                                        {
                                            <div class="text-xs text-gray-500 mt-2">
                                                + @(athlete.EventsInCategory.Count - 3) more events
                                            </div>
                                        }
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </details>
            }
        }
        else
        {
            <div class="p-8 bg-gray-800/50 border border-gray-700 rounded-xl text-center">
                <p class="text-gray-400">No former athletes found.</p>
            </div>
        }
    </div>

</div>
