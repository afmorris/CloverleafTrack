    <input type="checkbox" id="darkModeToggle" class="sr-only peer" />

    <!-- Background track -->
    <div class="w-full h-full bg-gray-300 peer-checked:bg-ctf-accent dark:bg-gray-600 rounded-full transition-colors duration-300"></div>

    <!-- Sliding knob with icon -->
    <div class="absolute left-0 top-0 w-6 h-6 bg-white rounded-full border border-gray-300 shadow-sm transform peer-checked:translate-x-6 transition-transform duration-300 flex items-center justify-center pointer-events-none">
                
                
