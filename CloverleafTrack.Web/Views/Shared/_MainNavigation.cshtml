@{
    var currentPath = Context.Request.Path;
}

<nav class="font-heading text-sm uppercase tracking-wide font-semibold text-gray-100 space-x-6">
        @{
            var links = new[]
            {
                new { Href = "/leaderboard", Text = "Leaderboard" },
                new { Href = "/seasons", Text = "Seasons" },
                new { Href = "/roster", Text = "Roster" }
            };

            foreach (var link in links)
            {
                var isActive = currentPath.StartsWithSegments(link.Href, StringComparison.OrdinalIgnoreCase);
                var activeClass = isActive ? "dark:text-ctf-accent text-ctf-darkaccent underline underline-offset-4" : "hover:text-ctf-accent";
            }
        }

        @foreach (var link in links)
        {
            var isActive = currentPath.StartsWithSegments(link.Href, StringComparison.OrdinalIgnoreCase);
            var activeClass = isActive ? "dark:text-ctf-accent text-ctf-darkaccent underline underline-offset-4" : "hover:text-ctf-accent";

            <a href="@link.Href" class="@($"transition-colors duration-200 {activeClass}")">@link.Text</a>
        }
</nav>