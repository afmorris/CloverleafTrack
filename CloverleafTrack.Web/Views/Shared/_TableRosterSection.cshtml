@model Dictionary<int, List<AthleteViewModel>>

<div x-data="{ search: '' }">
    <h1 class="text-3xl font-heading font-bold mb-8">Former Athletes</h1>
    
    <div class="mb-8">
        <input type="text" x-model="search" placeholder="Search by name..." class="w-full sm:w-1/2 px-4 py-2 rounded-md shadow-sm
         bg-white dark:bg-gray-800
         border border-gray-300 dark:border-gray-600
         text-gray-900 dark:text-gray-100
         placeholder-gray-400 dark:placeholder-gray-500
         focus:outline-none focus:ring-2 focus:ring-ctf-accent focus:border-transparent" />
    </div>

    @foreach (var yearGroup in Model.OrderByDescending(x => x.Key))
    {
        @await Html.PartialAsync("_YearTableRosterSection", yearGroup)
    }
</div>

