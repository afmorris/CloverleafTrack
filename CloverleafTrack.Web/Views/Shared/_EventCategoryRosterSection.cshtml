@model KeyValuePair<EventCategory, List<AthleteViewModel>>

<section class="mb-12">
    <h2 class="text-2xl font-heading font-semibold text-ctf-darkaccent dark:text-ctf-accent mb-4">
        @Model.Key
    </h2>
    
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-3">
        @foreach (var athlete in Model.Value.OrderBy(x => x.FullName))
        {
            @await Html.PartialAsync("_AthleteRosterCard", athlete)
        }
    </div>
</section>