@using CloverleafTrack.ViewModels.Seasons;

@model List<SeasonCardViewModel>

@{
    var currentSeason = Model.FirstOrDefault(s => s.IsCurrentSeason);    
}

@functions {
	string GetGenderIcon(CloverleafTrack.Models.Enums.Gender gender) => gender switch
	{
		CloverleafTrack.Models.Enums.Gender.Male => "‚ôÇ",
		CloverleafTrack.Models.Enums.Gender.Female => "‚ôÄ",
		CloverleafTrack.Models.Enums.Gender.Mixed => "‚ö•",
		_ => ""
	};

	string GetGenderClass(CloverleafTrack.Models.Enums.Gender gender) => gender switch
	{
		CloverleafTrack.Models.Enums.Gender.Male => "text-blue-600 dark:text-blue-400",
		CloverleafTrack.Models.Enums.Gender.Female => "text-pink-600 dark:text-pink-400",
		CloverleafTrack.Models.Enums.Gender.Mixed => "text-purple-600 dark:text-purple-400",
		_ => "text-gray-600 dark:text-gray-400"
	};
}

@if (currentSeason != null)
{
    <!-- Current Season Highlight -->
    <div class="mb-12">
        <div class="flex items-center gap-3 mb-6">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Current Season</h2>
        </div>

        <div class="bg-white dark:bg-gray-800 border-2 border-green-800/50 dark:border-green-500/50 rounded-2xl p-8 shadow-2xl">
            <div class="flex items-start justify-between mb-6">
                <div>
                    <h3 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">@currentSeason.Name</h3>
                </div>
                <a href="@Url.Action("Details", "Seasons", new { name = currentSeason.Name })"
                    class="px-6 py-3 dark:bg-green-500/20 dark:text-green-400 bg-green-100 text-green-700 border border-green-200 dark:border-green-700 font-medium rounded-lg transition-colors">
                    View Season Details ‚Üí
                </a>
            </div>

            <!-- Season Stats Grid -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
                <div class="bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900/40 dark:to-purple-800/40 border-purple-200 dark:border-purple-700 rounded-lg p-4 border">
                    <div class="text-2xl font-bold text-purple-700 dark:text-purple-300 mb-1">@currentSeason.TotalPRs</div>
                    <div class="text-sm text-purple-900 dark:text-purple-100">Season PRs</div>
                </div>
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/40 dark:to-blue-800/40 border-blue-200 dark:border-blue-700 rounded-lg p-4 border">
                    <div class="text-2xl font-bold text-blue-700 dark:text-blue-300 mb-1">@currentSeason.IndoorSchoolRecordCount</div>
                    <div class="text-sm text-blue-900 dark:text-blue-100">Indoor SRs</div>
                </div>
                <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 dark:from-yellow-900/40 dark:to-yellow-800/40 border-yellow-200 dark:border-yellow-700 rounded-lg p-4 border">
                    <div class="text-2xl font-bold text-yellow-700 dark:text-yellow-300 mb-1">@currentSeason.OutdoorSchoolRecordCount</div>
                    <div class="text-sm text-yellow-900 dark:text-yellow-100">Outdoor SRs</div>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-green-100 dark:from-green-900/40 dark:to-green-800/40 border-green-200 dark:border-green-700 rounded-lg p-4 border">
                    <div class="text-2xl font-bold text-green-700 dark:text-green-300 mb-1">@currentSeason.TotalMeets</div>
                    <div class="text-sm text-green-900 dark:text-green-100">Meets</div>
                </div>
            </div>

            <!-- School Records Split -->
            <div class="grid md:grid-cols-2 gap-6">
                <!-- Indoor Records -->
                @if (currentSeason.IndoorSchoolRecords?.Any() ?? false)
                {
                    <div class="bg-gray-100 dark:bg-gray-800 rounded-xl p-6 border border-blue-500/30">
                        <div class="flex items-center gap-2 mb-4">
                            <div class="text-2xl">üè¢</div>
                            <h4 class="text-lg font-bold text-blue-700 dark:text-blue-300">Indoor School Records (@currentSeason.IndoorSchoolRecordCount)</h4>
                        </div>
                        <div class="space-y-2 max-h-64 overflow-y-auto">
                            @foreach (var record in currentSeason.IndoorSchoolRecords)
                            {
                                <div class="record-item flex items-start gap-3 p-3 rounded-lg">
                                    <div class="@GetGenderClass(record.Gender) text-lg mt-0.5">
                                        @GetGenderIcon(record.Gender)
                                    </div>
                                    <div class="flex-1">
                                        <div class="text-gray-900 dark:text-white font-medium">@record.EventName - 
                                        <a class="underline" asp-controller="Roster" asp-action="Details" asp-route-slug="@record.RecordHolderSlug">
                                            @record.RecordHolder
                                        </a>
                                        </div>
                                        <div class="text-sm text-gray-600 dark:text-gray-400">@record.Performance</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Outdoor Records -->
                @if (currentSeason.OutdoorSchoolRecords?.Any() ?? false)
                {
                    <div class="bg-gray-100 dark:bg-gray-800 rounded-xl p-6 border border-amber-500/30">
                        <div class="flex items-center gap-2 mb-4">
                            <div class="text-2xl">‚òÄÔ∏è</div>
                            <h4 class="text-lg font-bold text-yellow-700 dark:text-yellow-300">Outdoor School Records (@currentSeason.OutdoorSchoolRecordCount)</h4>
                        </div>
                        <div class="space-y-2 max-h-64 overflow-y-auto">
                            @foreach (var record in currentSeason.OutdoorSchoolRecords)
                            {
                                <div class="record-item flex items-start gap-3 p-3 rounded-lg">
                                    <div class="@GetGenderClass(record.Gender) text-lg mt-0.5">
                                        @GetGenderIcon(record.Gender)
                                    </div>
                                    <div class="flex-1">
                                        <div class="text-gray-900 dark:text-white font-medium">@record.EventName - 
                                        <a class="underline" asp-controller="Roster" asp-action="Details" asp-route-slug="@record.RecordHolderSlug">
                                            @record.RecordHolder
                                        </a>
                                        </div>
                                        <div class="text-sm text-gray-600 dark:text-gray-400">@record.Performance</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Season Highlight Note -->
            @if (!string.IsNullOrEmpty(currentSeason.Notes))
            {
                <div class="mt-6 p-4 bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900/40 dark:to-purple-800/40 rounded-lg border border-purple-200 dark:border-purple-700/30 shadow-sm">
                    <div class="flex items-start gap-3">
                        <div class="text-2xl">‚ú®</div>
                        <div>
                            <div class="font-medium text-purple-700 dark:text-purple-300 mb-1">Season Notes</div>
                            <div class="text-sm text-gray-600 dark:text-gray-400 italic">@currentSeason.Notes</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}