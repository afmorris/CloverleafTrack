@model SeasonCardViewModel

<div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 mb-6 border border-gray-200 dark:border-gray-700 flex flex-col md:flex-row gap-6">

    <!-- Left Panel: Season Info -->
    <div class="md:w-1/3 flex flex-col gap-2">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">@Model.Name</h2>

        @if (Model.IndoorSchoolRecords?.Any() == true)
        {
            <div class="text-xs text-green-700 dark:text-green-300 mt-2">
                üèüÔ∏è Indoor SRs: @Model.IndoorSchoolRecords.Count
            </div>
        }
        @if (Model.OutdoorSchoolRecords?.Any() == true)
        {
            <div class="text-xs text-green-700 dark:text-green-300 mt-1">
                üå§Ô∏è Outdoor SRs: @Model.OutdoorSchoolRecords.Count
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="text-xs italic text-yellow-700 dark:text-yellow-300 mt-2">
                üìù @Model.Notes
            </div>
        }
    </div>

    <!-- Right Panel: School Records -->
    <div class="md:w-2/3 flex flex-col gap-4">
        @if (Model.IndoorSchoolRecords?.Any() == true)
        {
            <div>
                <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100 mb-1">
                    üèüÔ∏è Indoor School Records
                </h3>
                <ul class="text-xs text-gray-700 dark:text-gray-300 list-disc list-inside">
                    @foreach (var record in Model.IndoorSchoolRecords)
                    {
                        <li>@record.EventName ‚Äì @record.RecordHolder (@record.Performance)</li>
                    }
                </ul>
            </div>
        }
        @if (Model.OutdoorSchoolRecords?.Any() == true)
        {
            <div>
                <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100 mb-1">
                    üå§Ô∏è Outdoor School Records
                </h3>
                <ul class="text-xs text-gray-700 dark:text-gray-300 list-disc list-inside">
                    @foreach (var record in Model.OutdoorSchoolRecords)
                    {
                        <li>@record.EventName ‚Äì @record.RecordHolder (@record.Performance)</li>
                    }
                </ul>
            </div>
        }

        <div class="mt-2">
            <a href="@Url.Action("Overview", "Seasons", new { id = Model.Id })"
               class="inline-block text-sm text-blue-600 dark:text-blue-400 hover:underline">
                View Season Overview ‚Üí
            </a>
        </div>
    </div>
</div>
