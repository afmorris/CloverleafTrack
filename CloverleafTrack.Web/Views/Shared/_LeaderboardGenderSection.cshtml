@using Slugify

@model Tuple<bool, bool, List<LeaderboardCategoryViewModel>>

@{
    string genderBorder = string.Empty;
    string genderColor = string.Empty;

    string environmentColor = string.Empty;

    if (Model.Item1) // Male
    {
        genderBorder = "border-blue-500";
        genderColor = "text-blue-600 dark:text-blue-400";
    }
    else // Female
    {
        genderBorder = "border-pink-500";
        genderColor = "text-pink-600 dark:text-pink-400";
    }

    if (Model.Item2) // Indoor
    {
        environmentColor = "text-blue-700 dark:text-blue-300";
    }
    else // Outdoor
    {
        environmentColor = "text-yellow-600 dark:text-yellow-300";
    }
}

@foreach (var category in Model.Item3)
{
    <div class="mb-8">
        <h3 class="text-lg font-semibold mb-3 text-gray-800 dark:text-gray-300 uppercase tracking-wide">@category.CategoryName</h3>
        
        <div class="space-y-2">
            @foreach (var evt in category.Events.Where(x => !string.IsNullOrEmpty(x.Performance)))
            {
                <div class="bg-gray-100 dark:bg-gray-800 border-l-4 @genderBorder rounded-r-lg hover:bg-gray-200 dark:hover:bg-gray-900 transition-colors">
                    <div class="p-4 flex items-center justify-between">
                        <div class="flex-1">
                            <a asp-controller="Leaderboard" asp-action="Details" asp-route-eventKey="@evt.EventKey"
                            class="font-semibold text-gray-900 dark:text-white hover:text-blue-400 transition-colors underline">
                                @evt.EventName
                            </a>
                            @if (!string.IsNullOrEmpty(evt.AthleteFirstName) && !string.IsNullOrEmpty(evt.AthleteLastName))
                            {
                                <div class="text-sm text-gray-500 mt-1">
                                    <a asp-controller="Roster" asp-action="Details" asp-route-slug="@evt.AthleteSlug" class="underline">
                                        @evt.AthleteFullName
                                    </a>
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(evt.RelayName))
                            {
                                <div class="text-sm text-gray-500 mt-1">
                                        @foreach (var athlete in evt.RelayMembers)
                                        {
                                            var split = athlete.Split(' ');
                                            if (split.Length >= 2)
                                            {
                                                var firstName = split[0];
                                                var lastName = split[1];
                                                var helper = new SlugHelper();
                                                var slug = helper.GenerateSlug($"{firstName}-{lastName}");

                                                <div class="text-gray-900 dark:text-white">
                                                    <span class="mr-2">â€¢</span>
                                                    <a asp-controller="Roster" asp-action="Details" asp-route-slug="@slug" class="underline">
                                                        @athlete
                                                    </a>
                                                </div>
                                            }
                                        }
                                </div>
                            }
                        </div>
                        <div class="text-right">
                            @if (!string.IsNullOrEmpty(evt.Performance))
                            {
                                <div class="text-2xl font-bold font-mono @environmentColor">@evt.Performance</div>
                            }
                            else
                            {
                                <div class="text-gray-500 italic text-xs">No performances yet</div>
                            }
                            @if (evt.MeetDate.HasValue)
                            {
                                <div class="text-xs text-gray-600 mt-1">
                                    <a asp-controller="Meets" asp-action="Details" asp-route-slug="@evt.MeetSlug" class="underline">
                                        @evt.MeetDate.Value.ToString("MMM d, yyyy")
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}