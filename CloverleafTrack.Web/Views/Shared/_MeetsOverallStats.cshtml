@model MeetsIndexViewModel

<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-12">
    <div class="bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900/40 dark:to-purple-800/40 rounded-xl p-6 border border-purple-200 dark:border-purple-700/30 shadow-sm">
        <div class="text-sm text-purple-700 dark:text-purple-300 mb-2 uppercase tracking-wide font-semibold">Total Meets</div>
        <div class="text-4xl font-bold text-purple-900 dark:text-purple-100 mb-1">@Model.TotalMeets</div>
        <div class="text-sm text-purple-600 dark:text-purple-300">All time</div>
    </div>
    <div class="bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/40 dark:to-blue-800/40 rounded-xl p-6 border border-blue-200 dark:border-blue-700/30 shadow-sm">
        <div class="text-sm text-blue-700 dark:text-blue-300 mb-2 uppercase tracking-wide font-semibold">Total PRs</div>
        <div class="text-4xl font-bold text-blue-900 dark:text-blue-100 mb-1">@Model.TotalPRs</div>
        <div class="text-sm text-blue-600 dark:text-blue-300">Personal records</div>
    </div>
    <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 dark:from-yellow-900/40 dark:to-yellow-800/40 rounded-xl p-6 border border-yellow-200 dark:border-yellow-700/30 shadow-sm">
        <div class="text-sm text-yellow-700 dark:text-yellow-300 mb-2 uppercase tracking-wide font-semibold">School Records</div>
        <div class="text-4xl font-bold text-yellow-900 dark:text-yellow-100 mb-1">@Model.TotalSchoolRecords</div>
        <div class="text-sm text-yellow-600 dark:text-yellow-300">Broken records</div>
    </div>
    <div class="bg-gradient-to-br from-green-50 to-green-100 dark:from-green-900/40 dark:to-green-800/40 rounded-xl p-6 border border-green-200 dark:border-green-700/30 shadow-sm">
        <div class="text-sm text-green-700 dark:text-green-300 mb-2 uppercase tracking-wide font-semibold">Seasons</div>
        <div class="text-4xl font-bold text-green-900 dark:text-green-100 mb-1">@Model.TotalSeasons</div>
        <div class="text-sm text-green-600 dark:text-green-300">Years tracked</div>
    </div>
</div>