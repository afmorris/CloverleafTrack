@using CloverleafTrack.ViewModels.Seasons;

@model List<SeasonCardViewModel>

@{
    var pastSeasons = Model.Where(s => !s.IsCurrentSeason).ToList();
}

@if (pastSeasons.Count > 3)
{
    <details class="bg-white dark:bg-gray-800 border border-gray-800/50 dark:border-gray-500/50 rounded-xl overflow-hidden">
        <summary class="p-6 cursor-pointer hover:bg-gray-300/30 dark:hover:bg-gray-700/30 transition-colors flex items-center justify-between">
            <div>
                <h3 class="text-xl font-bold mb-1 text-gray-900 dark:text-white">Earlier Seasons</h3>
                <p class="text-sm text-gray-400">@(pastSeasons.Count - 3) more seasons</p>
            </div>
            <svg class="w-6 h-6 text-gray-400 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
        </summary>
        <div class="px-6 pb-6 pt-2 space-y-3">
            @foreach (var season in pastSeasons.Skip(3))
            {
                @await Html.PartialAsync("_OldSeasonCard", season)
            }
        </div>
    </details>
}