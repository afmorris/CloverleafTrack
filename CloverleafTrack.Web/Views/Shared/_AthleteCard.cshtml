@model AthleteViewModel

<style>
    .athlete-card {
        transition: all 0.2s ease-in-out;
    }
    .athlete-card:hover {
        transform: translateY(-2px);
    }
</style>

<a href="@Url.Action("Details", "Roster", new { slug = Model.AthleteSlug })" 
    class="athlete-card bg-white dark:bg-gray-800 hover:bg-gray-100 hover:dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-xl p-5 block hover:shadow-xl">
    <div class="flex items-start justify-between mb-3">
        <div>
            <h4 class="text-lg font-bold text-gray-900 dark:text-white mb-1">
                @Model.FullName
            </h4>
            <div class="text-sm text-gray-800 dark:text-white">@Model.Class</div>
        </div>
        <div class="text-2xl">
            @if (Model.Gender == CloverleafTrack.Models.Enums.Gender.Male)
            {
                <span class="text-blue-400">‚ôÇ</span>
            }
            else
            {
                <span class="text-pink-400">‚ôÄ</span>
            }
        </div>
    </div>
    
    <div class="space-y-2">
        @foreach (var evt in Model.EventsInCategory.Take(3))
        {
            <div class="flex items-center justify-between text-sm">
                <span class="text-gray-700 dark:text-gray-300 flex items-center gap-2">
                    @if (evt.Environment == CloverleafTrack.Models.Enums.Environment.Indoor)
                    {
                        <span class="text-blue-400 text-xs">üè¢</span>
                    }
                    else
                    {
                        <span class="text-amber-400 text-xs">‚òÄÔ∏è</span>
                    }
                    @evt.Name
                </span>
                <span class="font-mono font-semibold text-gray-900 dark:text-white">@evt.PersonalRecord</span>
            </div>
        }
        
        @if (Model.EventsInCategory.Count > 3)
        {
            <div class="text-xs text-gray-500 mt-2">
                + @(Model.EventsInCategory.Count - 3) more events
            </div>
        }
    </div>
</a>