@model HomePageViewModel

@{
    ViewBag.Title = "Cloverleaf Track & Field";
}

@section Hero {
    <div class="relative h-[20vh] bg-cover bg-center bg-no-repeat" style="background-image: url('img/hero-home.jpg');">

        <!-- overlay -->
        <div class="absolute inset-0 bg-black dark:bg-opacity-75 bg-opacity-25"></div>

        <!-- content -->
        <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white px-4 z-10">
            <h1 class="text-4xl md:text-5xl font-heading font-extrabold mb-2">Cloverleaf Track & Field</h1>
            <p class="text-lg md:text-xl dark:text-ctf-accent text-ctf-darkaccent">Your journey. Our history. One team.</p>
        </div>
    </div>
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Season at a Glance -->
    <section class="mb-16">
        <h2 class="text-4xl font-bold mb-8 text-gray-900 dark:text-white">Season at a Glance</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900/40 dark:to-purple-800/40 rounded-xl p-6 border border-purple-200 dark:border-purple-700/30 shadow-sm">
                <div class="text-sm text-purple-700 dark:text-purple-300 mb-2 font-semibold uppercase tracking-wide">Season PRs</div>
                <div class="text-5xl font-bold text-purple-900 dark:text-purple-100 mb-2">@Model.TotalPRsThisSeason</div>
                <div class="text-sm text-purple-600 dark:text-purple-300">across all events</div>
            </div>

            <div class="bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/40 dark:to-blue-800/40 rounded-xl p-6 border border-blue-200 dark:border-blue-700/30 shadow-sm">
                <div class="text-sm text-blue-700 dark:text-blue-300 mb-2 font-semibold uppercase tracking-wide">Active Athletes</div>
                <div class="text-5xl font-bold text-blue-900 dark:text-blue-100 mb-2">@Model.ActiveAthletes</div>
                <div class="text-sm text-blue-600 dark:text-blue-300">competing this season</div>
            </div>

            <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 dark:from-yellow-900/40 dark:to-yellow-800/40 rounded-xl p-6 border border-yellow-200 dark:border-yellow-700/30 shadow-sm">
                <div class="text-sm text-yellow-700 dark:text-yellow-300 mb-2 font-semibold uppercase tracking-wide">School Records</div>
                <div class="text-5xl font-bold text-yellow-900 dark:text-yellow-100 mb-2">@Model.SchoolRecordsBroken</div>
                <div class="text-sm text-yellow-600 dark:text-yellow-300">new records this season</div>
            </div>

            <div class="bg-gradient-to-br from-green-50 to-green-100 dark:from-green-900/40 dark:to-green-800/40 rounded-xl p-6 border border-green-200 dark:border-green-700/30 shadow-sm">
                <div class="text-sm text-green-700 dark:text-green-300 mb-2 font-semibold uppercase tracking-wide">Meets</div>
                <div class="text-5xl font-bold text-green-900 dark:text-green-100 mb-2">@Model.MeetsCompleted / @Model.TotalMeetsThisSeason</div>
                <div class="text-sm text-green-600 dark:text-green-300">season progress</div>
            </div>
        </div>
    </section>

    <!-- On This Day -->
    @if (Model.OnThisDay != null)
    {
        <section class="mb-16">
            <h2 class="text-4xl font-bold mb-8 text-gray-900 dark:text-white">On This Day in Cloverleaf History</h2>
            <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/40 dark:to-purple-900/40 rounded-xl p-8 border border-indigo-200 dark:border-indigo-700/30 shadow-sm">
                <div class="flex items-start gap-6">
                    <div class="text-7xl flex-shrink-0">🏆</div>
                    <div class="flex-1">
                        <div class="text-sm text-indigo-700 dark:text-indigo-300 mb-3 font-semibold uppercase tracking-wide">@Model.OnThisDay.Date.ToString("MMMM d, yyyy")</div>
                        <h3 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white leading-tight">
                            @Model.OnThisDay.AthleteFullName
                            @if (Model.OnThisDay.IsSchoolRecord)
                            {
                                <span>set the school record in the @Model.OnThisDay.EventName</span>
                            }
                            else if (Model.OnThisDay.AllTimeRank.HasValue && Model.OnThisDay.AllTimeRank <= 3)
                            {
                                <span>posted a top-3 all-time mark in the @Model.OnThisDay.EventName</span>
                            }
                            else
                            {
                                <span>competed in the @Model.OnThisDay.EventName</span>
                            }
                        </h3>
                        <div class="flex flex-wrap items-center gap-4 mb-4">
                            <div>
                                <span class="text-green-600 dark:text-green-400 font-mono font-bold text-4xl">@Model.OnThisDay.Performance</span>
                            </div>
                            <div class="text-gray-400 dark:text-gray-500 text-2xl">•</div>
                            <div class="text-gray-700 dark:text-gray-300 text-lg">@Model.OnThisDay.MeetName</div>
                        </div>
                        <a asp-controller="Roster" asp-action="Details" asp-route-slug="@Model.OnThisDay.AthleteSlug" class="inline-flex items-center text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300 font-semibold transition-colors">
                            View @Model.OnThisDay.AthleteFirstName's Profile
                            <svg class="w-5 h-5 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    }

    <!-- Recent Highlights - TABBED -->
    <section class="mb-16">
        <h2 class="text-4xl font-bold mb-8 text-gray-900 dark:text-white">Recent Highlights</h2>

        <div class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700 shadow-sm">
            <!-- Tab Headers -->
            <div class="flex border-b border-gray-200 dark:border-gray-700">
                <button class="highlights-tab flex-1 py-4 px-6 font-bold text-lg transition-all flex items-center justify-center gap-3" data-tab="indoor">
                    🏢 INDOOR
                </button>
                <button class="highlights-tab flex-1 py-4 px-6 font-bold text-lg transition-all flex items-center justify-center gap-3" data-tab="outdoor">
                    ☀️ OUTDOOR
                </button>
            </div>

            <!-- Indoor Content -->
            <div id="highlights-indoor" class="highlights-content p-8">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    @if (Model.IndoorBreakoutAthlete != null)
                    {
                        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-8 border border-gray-200 dark:border-gray-700 hover:border-purple-500 dark:hover:border-purple-500 transition-all shadow-sm hover:shadow-md">
                            <div class="flex items-center gap-2 text-purple-600 dark:text-purple-400 mb-4 font-semibold">
                                <span class="text-2xl">🌟</span>
                                <span class="uppercase tracking-wide text-sm">Breakout Athlete</span>
                            </div>
                            <div class="font-mono text-4xl font-bold text-purple-600 dark:text-purple-400 mb-3">@Model.IndoorBreakoutAthlete.PRCount PRs</div>
                            <div class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">
                                <a asp-controller="Roster" asp-action="Details" asp-route-slug="@Model.IndoorBreakoutAthlete.Slug" class="hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
                                    @Model.IndoorBreakoutAthlete.FullName
                                </a>
                            </div>
                            <div class="text-sm text-gray-600 dark:text-gray-400 mb-4">@Model.IndoorBreakoutAthlete.Class</div>
                            <div class="text-xs text-gray-500 dark:text-gray-500">Personal records this season</div>
                        </div>
                    }

                    @if (Model.IndoorBiggestImprovement != null)
                    {
                        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-8 border border-gray-200 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-500 transition-all shadow-sm hover:shadow-md">
                            <div class="flex items-center gap-2 text-blue-600 dark:text-blue-400 mb-4 font-semibold">
                                <span class="text-2xl">📈</span>
                                <span class="uppercase tracking-wide text-sm">Biggest Improvement</span>
                            </div>
                            <div class="font-mono text-4xl font-bold text-blue-600 dark:text-blue-400 mb-3">@Model.IndoorBiggestImprovement.ImprovementDisplay</div>
                            <div class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">
                                <a asp-controller="Roster" asp-action="Details" asp-route-slug="@Model.IndoorBiggestImprovement.AthleteSlug" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                                    @Model.IndoorBiggestImprovement.AthleteFullName
                                </a>
                            </div>
                            <div class="text-sm text-gray-600 dark:text-gray-400 mb-4">@Model.IndoorBiggestImprovement.EventName</div>
                            <div class="text-xs text-gray-500 dark:text-gray-500">
                                From @Model.IndoorBiggestImprovement.PreviousPerformance<br />
                                to @Model.IndoorBiggestImprovement.CurrentPerformance
                            </div>
                        </div>
                    }

                    @if (Model.IndoorTopPerformance != null)
                    {
                        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-8 border border-gray-200 dark:border-gray-700 hover:border-green-500 dark:hover:border-green-500 transition-all shadow-sm hover:shadow-md">
                            <div class="flex items-center gap-2 text-green-600 dark:text-green-400 mb-4 font-semibold">
                                <span class="text-2xl">⚡</span>
                                <span class="uppercase tracking-wide text-sm">Top Performance</span>
                            </div>
                            <div class="font-mono text-4xl font-bold text-green-600 dark:text-green-400 mb-3">@Model.IndoorTopPerformance.Performance</div>
                            <div class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">
                                <a asp-controller="Roster" asp-action="Details" asp-route-slug="@Model.IndoorTopPerformance.AthleteSlug" class="hover:text-green-600 dark:hover:text-green-400 transition-colors">
                                    @Model.IndoorTopPerformance.AthleteFullName
                                </a>
                            </div>
                            <div class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                                @Model.IndoorTopPerformance.EventName
                                @if (Model.IndoorTopPerformance.IsPersonalBest)
                                {
                                    <span class="ml-1 px-2 py-0.5 text-xs font-semibold rounded bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">PR</span>
                                }
                                @if (Model.IndoorTopPerformance.IsSchoolRecord)
                                {
                                    <span class="ml-1 px-2 py-0.5 text-xs font-semibold rounded bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">SR</span>
                                }
                            </div>
                            <div class="text-xs text-gray-500 dark:text-gray-500">
                                @Model.IndoorTopPerformance.MeetName<br />
                                @Model.IndoorTopPerformance.Date.ToString("MMMM d, yyyy")
                            </div>
                        </div>
                    }

                </div>
            </div>

            <!-- Outdoor Content -->
            <div id="highlights-outdoor" class="highlights-content hidden p-8">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    @if (Model.OutdoorBreakoutAthlete != null)
                    {
                        <div class="bg-gray-50 dark:bg-gray-900 rounded-xl p-8 border border-gray-200 dark:border-gray-700 hover:border-purple-500 dark:hover:border-purple-500 transition-all shadow-sm hover:shadow-md">
                            <div class="flex items-center gap-2 text-purple-600 dark:text-purple-400 mb-4 font-semibold">
                                <span class="text-2xl">🌟</span>
