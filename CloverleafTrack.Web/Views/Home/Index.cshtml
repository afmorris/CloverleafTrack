                                                <div class="text-sm text-gray-600 dark:text-gray-400">
                                                    <a asp-controller="Roster" asp-action="Details" asp-route-slug="@leader.AthleteSlug" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
